#ifndef OpDiffIJKScalar_H
#define OpDiffIJKScalar_H
#include <IJK_Field.h>
#include <IJK_Field_simd_tools.h>
#include <TRUSTTab.h>
#include <IJK_Splitting.h>
#include <Operateur_IJK_base.h>
#include <Operateur_IJK_data_channel.h>

#Pmacro DEF_Op(ST,CASE,_OP_NAME_)

class _OP_NAME__ST : public Operateur_IJK_elem_base_ST
{
 public:
  _OP_NAME__ST();
  void initialize(const IJK_Splitting & splitting);
  void calculer(const IJK_Field_ST & field, 
#Pif ("CASE"=="Yes_M_Grad" or "CASE"=="Yes_M_GradAnisotropic")
                const IJK_Field_ST & molecular_alpha,
#Pendif
#Pif ("CASE"=="Yes_M_GradVectorial" or "CASE"=="Yes_M_GradVectorialAnisotropic")
                const IJK_Field_ST & molecular_alpha_vector_x,
                const IJK_Field_ST & molecular_alpha_vector_y,
                const IJK_Field_ST & molecular_alpha_vector_z,
#Pendif
#Pif ("CASE"=="Yes_M_Struct")
                const IJK_Field_ST & structural_model_x,
                const IJK_Field_ST & structural_model_y,
                const IJK_Field_ST & structural_model_z,
#Pendif
                IJK_Field_ST & result,
                const IJK_Field_local_ST & boundary_flux_kmin,
                const IJK_Field_local_ST & boundary_flux_kmax);
  void ajouter(const IJK_Field_ST & field, 
#Pif ("CASE"=="Yes_M_Grad" or "CASE"=="Yes_M_GradAnisotropic")
               const IJK_Field_ST & molecular_alpha,
#Pendif
#Pif ("CASE"=="Yes_M_GradVectorial" or "CASE"=="Yes_M_GradVectorialAnisotropic")
                const IJK_Field_ST & molecular_alpha_vector_x,
                const IJK_Field_ST & molecular_alpha_vector_y,
                const IJK_Field_ST & molecular_alpha_vector_z,
#Pendif
#Pif ("CASE"=="Yes_M_Struct")
               const IJK_Field_ST & structural_model_x,
               const IJK_Field_ST & structural_model_y,
               const IJK_Field_ST & structural_model_z,
#Pendif
               IJK_Field_ST & result,
               const IJK_Field_local_ST & boundary_flux_kmin,
               const IJK_Field_local_ST & boundary_flux_kmax);
 protected:
#Pforeach DIR (x y z)
  void compute_flux_DIR(IJK_Field_local_ST & resu, const int k_layer) override;
#Pendforeach(DIR)

  Operateur_IJK_data_channel channel_data_;

  // Pointers to input data (set by calculer, used by compute_flux_...)
  const IJK_Field_local_ST *input_field_;
#Pif ("CASE"=="Yes_M_Grad" or "CASE"=="Yes_M_GradAnisotropic")
  const IJK_Field_local_ST *lambda_;
#Pendif
#Pif ("CASE"=="Yes_M_GradVectorial" or "CASE"=="Yes_M_GradVectorialAnisotropic")
  const IJK_Field_local_ST *lambda_vector_x_;
  const IJK_Field_local_ST *lambda_vector_y_;
  const IJK_Field_local_ST *lambda_vector_z_;
#Pendif
#Pif ("CASE"=="Yes_M_Struct")
  const IJK_Field_local_ST *structural_model_x_;
  const IJK_Field_local_ST *structural_model_y_;
  const IJK_Field_local_ST *structural_model_z_;
#Pendif
  const IJK_Field_local_ST *boundary_flux_kmin_;
  const IJK_Field_local_ST *boundary_flux_kmax_;
  bool perio_k_;
};
#Pendmacro(DEF_Op)
#Pusemacro(DEF_Op)(double,Yes_M_Grad,OpDiffIJKScalar)
#Pusemacro(DEF_Op)(double,Yes_M_GradAnisotropic,OpDiffAnisotropicIJKScalar)
#Pusemacro(DEF_Op)(double,Yes_M_GradVectorial,OpDiffVectorialIJKScalar)
#Pusemacro(DEF_Op)(double,Yes_M_GradVectorialAnisotropic,OpDiffVectorialAnisotropicIJKScalar)
#Pusemacro(DEF_Op)(double,Yes_M_Struct,OpDiffIJKScalarStructuralOnly)


#endif
