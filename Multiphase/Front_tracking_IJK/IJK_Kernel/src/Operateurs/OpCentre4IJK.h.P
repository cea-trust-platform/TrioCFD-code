#ifndef OpCentre4IJK_H
#define OpCentre4IJK_H
#include <IJK_Field.h>
#include <IJK_Field_simd_tools.h>
#include <TRUSTTab.h>
#include <IJK_Splitting.h>
#include <Operateur_IJK_base.h>
#include <Operateur_IJK_data_channel.h>

#Pmacro DEF_OpConvDiffH(ST)

class OpConvCentre4IJK_ST : public Operateur_IJK_faces_base_ST
{
 public:
  void initialize(const IJK_Splitting & splitting);
  void calculer(const IJK_Field_ST & inputx, const IJK_Field_ST & inputy, const IJK_Field_ST & inputz, 
		const IJK_Field_ST & vx, const IJK_Field_ST & vy, const IJK_Field_ST & vz, 
		IJK_Field_ST & dvx, IJK_Field_ST & dvy, IJK_Field_ST & dvz);
  void ajouter(const IJK_Field_ST & inputx, const IJK_Field_ST & inputy, const IJK_Field_ST & inputz, 
	       const IJK_Field_ST & vx, const IJK_Field_ST & vy, const IJK_Field_ST & vz, 
	       IJK_Field_ST & dvx, IJK_Field_ST & dvy, IJK_Field_ST & dvz);

  void calculer_avec_u_div_rhou(const IJK_Field_ST & rhovx, const IJK_Field_ST & rhovy, const IJK_Field_ST & rhovz, 
			        const IJK_Field_ST & vx, const IJK_Field_ST & vy, const IJK_Field_ST & vz, 
			        IJK_Field_ST & dvx, IJK_Field_ST & dvy, IJK_Field_ST & dvz,
			        IJK_Field_ST & div_rho_u);
  void ajouter_avec_u_div_rhou(const IJK_Field_ST & rhovx, const IJK_Field_ST & rhovy, const IJK_Field_ST & rhovz, 
			       const IJK_Field_ST & vx, const IJK_Field_ST & vy, const IJK_Field_ST & vz, 
			       IJK_Field_ST & dvx, IJK_Field_ST & dvy, IJK_Field_ST & dvz,
			       IJK_Field_ST & div_rho_u);
 protected:
#Pforeach DIR (x y z)
#Pforeach COMPO (x y z)
  void compute_flux_DIR_vCOMPO(IJK_Field_local_ST & resu, const int k_layer) override;
#Pendforeach(COMPO)
#Pendforeach(DIR)
#Pforeach DIR (x y z)
  void exec_after_divergence_flux_DIR(IJK_Field_ST & resu, const int k_layer) override;
#Pendforeach(DIR)

  // First layer of non zero fluxes (eg, not in the walls)
  // (specific for wall boundary conditions at zmin and zmax)

  double get_g(int k_layer, int compo, int dir, int g_index) const {
    if (dir != 2) {
      Process::exit(); // error: non uniform mesh in i or j not coded
    }
    if (compo != 2)
      return g_compo_xy_dir_z_(k_layer, g_index);
    else
      return g_compo_z_dir_z_(k_layer, g_index);
  }
  Operateur_IJK_data_channel channel_data_;
  bool perio_k_;
  // order 4 filtering coefficients for direction z fluxes
  //  (when non uniform mesh in z).
  DoubleTab g_compo_xy_dir_z_;
  DoubleTab g_compo_z_dir_z_;

  // Pointers to input velocity field
  const IJK_Field_ST *vx_;
  const IJK_Field_ST *vy_;
  const IJK_Field_ST *vz_;
  // Pointers to input convected field
  const IJK_Field_ST *inputx_;
  const IJK_Field_ST *inputy_;
  const IJK_Field_ST *inputz_;
  // Pointer to div_rho_u, filled by operator if ajouter_avec_u_div_rhou() is called
  IJK_Field_ST *div_rho_u_;
  int last_computed_klayer_for_div_rhou_;

};
#Pendmacro(DEF_OpConvDiffH)
#Pusemacro(DEF_OpConvDiffH)(double)
#endif
