#ifndef Coarsen_Operator_Uniform_H
#define Coarsen_Operator_Uniform_H

#include <Coarsen_Operator_base.h>

// Refine all cells by factor 2 in K, JK or IJK directions
class Coarsen_Operator_Uniform : public Coarsen_Operator_base
{
  Declare_instanciable(Coarsen_Operator_Uniform);
 public:
#Pforeach _TYPE_(double float)
  void initialize_grid_data(const Grid_Level_Data__TYPE_ & fine, Grid_Level_Data__TYPE_ & coarse,
			    int additional_k_layers);
  void coarsen(const IJK_Field__TYPE_ & fine, IJK_Field__TYPE_ & coarse, int compute_weighted_average = 0) const;
  void interpolate_sub_shiftk(const IJK_Field__TYPE_ & coarse, IJK_Field__TYPE_ & fine, const int kshift) const;
#Pendforeach(_TYPE_)
 protected:
  void ajouter_param(Param & param);
  // By how much shall we coarsen in each direction ?
  ArrOfInt coarsen_factors_;
};
#endif
