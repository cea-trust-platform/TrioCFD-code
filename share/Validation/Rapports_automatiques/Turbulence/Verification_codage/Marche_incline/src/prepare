#!/bin/bash

if [ ! -d Marche_incline ]
then
  # copie_cas_test Marche_incline || exit -1
  cp -R ${TrioCFD_project_directory}/tests/Reference/Turbulence/Turbulence/Marche_incline ./ || exit 1
fi

cd Marche_incline
rm -f verifie
for cas in Marche Marche_y Marche_incline
do
  sed "s/fields dt/format lata fields formatte dt/" $cas.data | sed "s/pression elem/vitesse elem Pression elem/"  > p ;
  mv p $cas.data
done
cp ../post_run .
 

