# This is a prepare script for the validation test case DIVA #

mkdir -p Mesh_1 Mesh_2 Mesh_3

cd Mesh_1
cp ../MeshDIVA_1.med .
cp ../DIVA.data .
cp ../ForceNum.py .
cp ../post_run .
cd ..

cd Mesh_2
cp ../MeshDIVA_2.med . 
cp ../mesh.data . 
cp ../DIVA.data . 
cp ../ForceNum.py . 
cp ../pre_run .
cp ../post_run .
sed -i "s/Read_med family_names_from_group_names dom Mesh_1 MeshDIVA_1.med/# Read_med family_names_from_group_names dom Mesh_1 MeshDIVA_2.med #/" ../DIVA.data > DIVA.data
sed -i "s/# Scatter DOM.Zones dom #/Scatter DOM.Zones dom/"  ../DIVA.data > DIVA.data
sed -i "s/VerifierCoin dom {  }/# VerifierCoin dom {  } #/"  ../DIVA.data > DIVA.data
sed "s/# SEQUENTIAL CALCULATION #/# PARALLEL ONLY 2 #/" ../DIVA.data > DIVA.data
cd .. 

cd Mesh_3
cp ../MeshDIVA_3.med .
cp ../mesh.data . 
cp ../DIVA.data .
cp ../ForceNum.py .
cp ../pre_run .
cp ../post_run .
sed "s/MeshDIVA_2.med/MeshDIVA_3.med/" ../mesh.data > mesh.data
sed -i "s/Partition_tool metis { Nb_parts 2 }/Partition_tool metis { Nb_parts 4 }/"  mesh.data
sed -i "s/Read_med family_names_from_group_names dom Mesh_1 MeshDIVA_1.med/# Read_med family_names_from_group_names dom Mesh_1 MeshDIVA_3.med #/"  ../DIVA.data > DIVA.data
sed -i "s/# Scatter DOM.Zones dom #/Scatter DOM.Zones dom/"  ../DIVA.data > DIVA.data
sed "s/# SEQUENTIAL CALCULATION #/# PARALLEL ONLY 4 #/" ../DIVA.data > DIVA.data
cd ..
